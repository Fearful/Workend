md-dialog(aria-label='Create Sprint', class="projectDialog", style='min-width:350px;max-height:500px;')
 form
  md-toolbar
   div.md-toolbar-tools(layout-padding, layout-align="space-between center")
    h2 {{'workend.project.create' | translate}}
    span(flex)
    md-button.md-icon-button(ng-click='close()')
     md-icon
      i.material-icons close
  md-dialog-content
   div(layout='column',flex)
    md-input-container(flex)
     label {{'workend.item.name' | translate}}
     input(type='text',ng-model="new.project.name")
    md-input-container(flex, style='height:200px;')
     label {{'workend.item.description' | translate}}
     textarea(md-maxlength="600",columns="1",ng-model="new.project.description")
   div(layout='row', flex)
    md-input-container(flex='40')
     label {{'workend.item.version' | translate}}
     input(type='text',ng-model="new.project.version")
    md-input-container(flex='30')
     label {{'workend.project.backlog' | translate}}
     md-switch(ng-hide="product.hasBacklog", ng-model="new.project.backlog" aria-label="Backlog")
    md-input-container(flex='30')
     label {{'workend.project.reqSprint' | translate}}
     md-switch(ng-model="new.project.requirement_sprint" aria-label="Requirement Sprint")
   div(layout='row')
    div(flex='50')
     h4 {{'workend.project.start' | translate}}
     md-datepicker(ng-model="new.project.start_date", placeholder="Enter date", ng-min-date="$root.prod.start_date", ng-max-date="$root.prod.end_date")
    div(flex='50')
     h4 {{'workend.project.end' | translate}}
     md-datepicker(ng-model="new.project.end_date", placeholder="Enter date", ng-min-date="new.project.start_date", ng-max-date="$root.prod.end_date")
  div.md-actions(layout="row")
      md-button(ng-click='close()') {{'workend.item.cancel' | translate}}
      span(flex)
      md-button(ng-click='createNewProject()') {{'workend.project.create' | translate}}